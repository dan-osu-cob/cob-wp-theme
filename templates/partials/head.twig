<!doctype html>
<html {{ site.language_attributes }}>
<head>
    <meta charset="{{ site.charset }}">
    <meta name="description" content="{{ site.description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover">
    <meta name="robots" content="noodp">

    {{ wp_head }}

    <link rel="pingback" href="{{ site.pingback_url }}">
    <link rel="stylesheet" media="all" href="//fonts.googleapis.com/css2?family=Roboto+Mono:wght@500&display=swap">
    <link rel="stylesheet" media="all" href="{{ theme_link }}/styles/main-min.css?v={{ version }}">

    {% if site.icon %}
        <link rel="icon" href="{{ site.icon }}">
    {% endif %}

    {% if options.scripts_in_head %}
        {{ options.scripts_in_head }}
    {% endif %}
</head>
