<form action="{{ url | default(site.url) }}" method="get" class="search-form" role="search" autocomplete="off">
    <input type="text" name="s" value="{{ query }}" placeholder="{{ __('Search all news', 'osubs') }}" minlength="3" required class="search-form__input">

    <button class="search-form__button">
        {% include 'partials/icon.twig' with { icon: 'search', size: 'sm' } %}
        <span class="u-sr-only">{{ __('Submit', 'osubs') }}</span>
    </button>
</form>
